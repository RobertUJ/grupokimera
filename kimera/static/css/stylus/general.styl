/*! Estilos generales. grupokimera.com */
$black = #0d0d0d

html
body
.contenedor
	box-sizing border-box
	font-family "novecento_sans_widedemibold", Arial, sand-serif
	font-size 16px
	height 100%
a
	color #fafafa
	font-size 1em
	text-decoration none
img
	vertical-align top
body
	background-color $black


.btn
	-moz-transition all 0.3s
	-webkit-transition all 0.3s
	background none
	border 4px solid white
	color white
	cursor pointer
	display inline-block
	outline none
	padding 0.8em 1.5em
	position relative
	position relative
	text-transform uppercase
	transition all 0.3s
	z-index 1006
	&:after
		content ''
		position absolute
		z-index -1
		-webkit-transition all 0.3s
		-moz-transition all 0.3s
		transition all 0.3s

/* Button 1c */
.btn-1c:after
	width 0%
	height 100%
	top 0
	left 0
	background #fff

.btn-1c:hover
.btn-1c:active
	color #071834

.btn-1c:hover:after
.btn-1c:active:after
	width 100%
	z-index -1

